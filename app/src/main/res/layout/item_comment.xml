<!-- res/layout/item_comment.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/commentAvatar"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/ic_avatar_placeholder"
        android:scaleType="centerCrop"
        android:layout_marginEnd="8dp"
        android:background="@drawable/circle_background" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/commentUserName"
            android:textStyle="bold"
            android:text="Tên người dùng"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/commentContent"
            android:text="Nội dung bình luận"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/commentCreatedAt"
            android:text="1 giờ trước"
            android:textSize="11sp"
            android:textColor="#888888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <ImageButton
        android:id="@+id/commentOptionsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Tùy chọn"
        android:layout_gravity="end"
        android:layout_marginStart="8dp" />
</LinearLayout>
